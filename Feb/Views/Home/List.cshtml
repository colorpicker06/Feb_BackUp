<!--고민들을 보여주는 페이지 입니다.-->
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>list</title>
    <link href="~/css/letter.css" rel="stylesheet" />
    <style>
        html {
            background-image: url('../../image/starlight.png');
        }
    </style>
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <div id="mySidenav" class="sidenav" style="z-index:100;">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="Index">메인</a>
        <a href="List">고민목록</a>
        <a href="Write">글쓰기</a>
        <a href="Suggest">건의하기</a>

    </div>

    <span style="font-size:30px;cursor:pointer; position: absolute; top: 30px; left: 30px;" onclick="openNav()"><font color="white">&#9776;</font></span>
    <div class="letter">
        <center><div class="title" style="color:#9C4635">고민보기</div></center>
        <div class="content">
            <table class="list_table" width="750px" cellpadding="15">
                @foreach(var worry in ViewBag.worryList)
                {
                <tr>
                    <td align="center">@worry.id</td>
                    <td style="padding-left:20px;"><a href="WorryDetail">@worry.title</a></td> <!--여기서 pk넘겨줘야해-->
                    <!--추후에 위에 건 링크에 고유번호를 같이 넘겨서 해당 컨텐츠가 띄게 할 예정 -->
                    @foreach (var user in ViewBag.userList)
                    {
                        if (worry.writer == user.id)
                        {
                            <td>@user.nickname 님</td>
                        }
                    }

                </tr>
                }
            </table>
        </div>
    </div>

    <script src="~/js/index.js"></script>
</body>
</html>
