<!--건의사항을 입력받는 페이지-->
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Suggest</title>
    <link href="~/css/letter.css" rel="stylesheet" />
    <link href="~/css/inputTags.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
    <style>
        html {
            background-image: url('../../image/starlight.png');
        }

        textarea {
            width: 700px;
        }

        .content {
            text-align: center;
        }

        input[type="text"] {
            width: 620px;
        }

        .input_title {
            margin: 0 20px;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div id="mySidenav" class="sidenav" style="z-index:100;">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="Index">메인</a>
        <a href="List">고민목록</a>
        <a href="Write">글쓰기</a>
        <a href="Suggest">건의하기</a>
    </div>

    <span style="font-size:30px;cursor:pointer; position: absolute; top: 30px; left: 30px;" onclick="openNav()"><font color="white">&#9776;</font></span>
    <div class="letter">
        <center><div class="title">건의하기</div></center>
        <div class="content">
        @using (Html.BeginForm("Suggest", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary();
            <center>
                <p>
                    <span class="input_title">제목</span><input type="text" name="title" placeholder="제목을 입력하세요..." />
                </p>
                <p>
                    <textarea rows='20' placeholder="건의사항 내용을 입력하세요..." name="content"></textarea>
                </p>
                <p>
                    <input type="submit" class="button_default" value="등록" />
                </p>
            </center>
        }
        </div>
    </div>
    <script src="~/js/index.js"></script>
</body>
</html>
