<!--건의사항을 입력받는 페이지-->
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Write</title>
    <link href="~/css/letter.css" rel="stylesheet" />
    <link href="~/css/inputTags.css" rel="stylesheet" />

    <style>
        html {
            background-image: url('../../image/starlight.png');
        }

        textarea {
            width: 100%;
        }

        .content {
            text-align: center;
        }

        input[type="text"] {
            width: 77%;
        }

        .input_title {
       
            font-weight: 700;
        }

    
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/css/index.css" rel="stylesheet" />
    <link href="~/css/selectBox.css" rel="stylesheet" />
</head>
<body>
    <div id="mySidenav" class="sidenav" style="z-index:100;">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="Index">메인</a>
        <a href="List">고민목록</a>
        <a href="Write">글쓰기</a>
        <a href="Suggest">건의하기</a>

    </div>

    <span style="font-size:30px;cursor:pointer; position: absolute; top: 30px; left: 30px;" onclick="openNav()"><font color="white">&#9776;</font></span>
    <div class="letter">
        <center><div class="title">고민쓰기</div></center>
        <div class="content">
            <center>
                @using (Html.BeginForm("Write", "Home", FormMethod.Post))
                {
                    @Html.ValidationSummary();

                    <select class="selector">
                        <optgroup label="인간관계">
                            <option>가족</option>
                            <option>친구</option>
                            <option>사랑</option>
                            <option>직장동료</option>
                        </optgroup>
                        <optgroup label="취업/진로">
                            <option>학업</option>
                            <option>취업/이직</option>
                            <option>진학</option>
                        </optgroup>
                        <optgroup label="나">
                            <option>성격</option>
                            <option>건강</option>
                            <option>행복</option>
                        </optgroup>
                        <optgroup label="모든 고민">
                            <option>잡것</option>
                        </optgroup>
                    </select>



                    <input type="text" name="title" placeholder="제목을 입력하세요..." />

                    <p>
                        <textarea rows='20' name = "content"  placeholder="고민을 입력하세요..."></textarea>
                    </p>
                    <p>
                        <input type="submit" class="button_default" value="등록" onclick="location.href='List'" />
                    </p>
                } <!--end of using-->
            </center>
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>

    <script src="~/js/selectBox.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>
